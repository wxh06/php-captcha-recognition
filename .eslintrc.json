{
  "root": true,
  "extends": ["airbnb-base", "prettier"],
  "overrides": [
    {
      "files": ["*.ts", "*.tsx"],
      "extends": [
        "airbnb-typescript/base",
        "plugin:@typescript-eslint/recommended",
        "plugin:@typescript-eslint/recommended-requiring-type-checking",
        "prettier"
      ],
      "parserOptions": { "project": "tsconfig.json" }
    }
  ]
}
